generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum CvEventType {
  WORK
  BIRTH
  DIPLOMA
}

model CVEvent {
  id        String      @id @default(dbgenerated()) @map("_id") @db.ObjectId
  content   String
  city      String
  country   String
  startedAt String
  title     String
  type      CvEventType
}
